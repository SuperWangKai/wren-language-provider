{
    "name": "wren-language-provider",
    "displayName": "Wren Language Provider",
    "description": "",
    "version": "0.0.1",
    "publisher": "sponge",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/sponge/wren-language-provider"
    },
    "homepage": "https://github.com/sponge/wren-language-provider",

    "languages": [
        {
            "id": "wren"
        }
    ],
    "activationEvents": [
        "onLanguage:wren"
    ],
    "capabilities": {
        "signatureHelpProvider": {
            "triggerCharacters": [
                "("
            ]
        },
        "completionProvider": {
            "resolveProvider": "true",
            "triggerCharacters": [
                "."
            ]
        }
    },
    "main": "./out/extension",
    "contributes": {
        "configuration":[
            {
                "type": "object",
                "title": "Wren Configuration",
                "properties": {
                    "wren.additionalModuleDirectories": {
                        "type": "array",
                        "default": "",
                        "description": "Additional directory to scan for .wren files"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.23",
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "bluebird": "^3.5.1",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21"
    }
}
